<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Client">

    <!-->Colors-->
    <Color x:Key="green" R="130" G="225" B="206" A="255"/>
    <Color x:Key="grey" R="90" G="90" B="90" A="127"/>
    <Color x:Key="black" R="0" G="0" B="0" A="255"/>

    <!--Brushes-->
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource green}"/>
    <SolidColorBrush x:Key="GreyBrush" Color="{StaticResource grey}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource black}"/>

</ResourceDictionary>